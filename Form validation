<html> 
<head>
<title>
	first javascript webpage
</title>

<script>
	function validateForm(){
		let x = document.forms["MyForm"]["fname"].value;
		if(x==""){
			alert("Name cannot be empty");
			//x.focus();
			return false;
		}else if(x.length<3){
			alert("Enter a valid name");
		 }
		let y = document.forms["MyForm"]["lname"].value;
		if(y==""){
			alert("Last name cannot be empty")
			//y.focus();
			return false;
		}else if(y.length<3){
			alert("Enter valid last name")
		}
		let z = document.forms["MyForm"]["email"].value;
		if(z==""){
			alert("Email cannot be empty")
			
		}
		let position = z.indexOf("@")
			if(position<=1){
				alert("Enter valid email id")
			}
		let w = document.forms["MyForm"]["pass"].value;
		if(w==""){
			alert("password cannot be empty")
		}else if(w.length<=8){
			alert("passowrd has to be atleast 9 letters")
		}
	}
</script>

<style>
body{
background-color: blue;
}
</style>
</head>

<body>
<h2>javascript validation  </h2>
<form name = "MyForm" onsubmit= "return validateForm()"method = "post">
first name: <input type = "text" name = "fname" placeholder = "Enter first name"> <br> <br>
last name: <input type = "text" name = "lname" placeholder = "Enter last name"><br> <br>
email id: <input type = "text" name = "email" placeholder = "Enter email id"><br> <br>
password: <input type = "password" name = "pass" placeholder = "Enter password"> <br> <br>
<input type = "submit" value = "submit">
</form>
</body>
</html>
